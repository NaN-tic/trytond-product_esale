<form string="Product" col="6">
  <label name="template"/>
  <field name="template"/>
  <field name="unique_variant" invisible="1"/>
  <notebook colspan="6">
      <page string="eSale" id="esale">
        <label name="esale_slug"/>
        <field name="esale_slug"/>
        <label name="esale_sequence"/>
        <field name="esale_sequence"/>
      </page>
      <page string="Attributes" id="attributes">
        <field name="attributes" colspan="6"/>
      </page>
      <page string="General" id="general">
        <label name="code"/>
        <field name="code"/>
        <label name="active"/>
        <field name="active" xexpand="0" width="100"/>
      </page>
      <page string="Description" id="description">
        <field name="description" colspan="6"/>
      </page>
      <page string="Attachments" id="attachments" states="{'invisible': Bool(Eval('unique_variant', True))}">
        <field name="attachments" colspan="6"/>
      </page>
  </notebook>
</form>
